<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <NumberPicker
        android:id="@+id/select_year_np"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="년"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/select_year_np"
        app:layout_constraintStart_toEndOf="@+id/select_year_np"
        app:layout_constraintTop_toTopOf="@+id/select_year_np" />

    <NumberPicker
        android:id="@+id/select_month_np"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintEnd_toStartOf="@+id/select_date_np"
        app:layout_constraintStart_toEndOf="@+id/select_year_np"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="월"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/select_month_np"
        app:layout_constraintStart_toEndOf="@+id/select_month_np"
        app:layout_constraintTop_toTopOf="@+id/select_month_np" />

    <NumberPicker
        android:id="@+id/select_date_np"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="일"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/select_date_np"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/select_date_np"
        app:layout_constraintVertical_bias="0.491" />

</androidx.constraintlayout.widget.ConstraintLayout>